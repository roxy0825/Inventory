<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0E0E0E"
                android:gravity="center"
                android:text="Registro de usuario"
                android:textColor="#070707"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#706F6F"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Nombre"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColorHint="#706F6F"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Correo electronico"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColorHint="#706F6F"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Clave"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#706F6F"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/cbActivoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Activo"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnguardarPark"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#34747C"
                    android:onClick="adicionar"
                    android:text="Guardar"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#34747C"
                    android:onClick="modificar"
                    android:text="Modificar"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnconsultarPark"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#34747C"
                    android:gravity="center"
                    android:onClick="consultar"
                    android:text="Consultar"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/btnanularPark"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#34747C"
                    android:onClick="anular"
                    android:text="Anular"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    app:cornerRadius="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btncancelarPark"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#34747C"
                    android:onClick="cancelar"
                    android:text="Cancelar"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/btnregresarPark"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#34747C"
                    android:onClick="regresar"
                    android:text="Regresar"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnConsultarPark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#34747C"
                android:onClick="listarUsuario"
                android:text="Listar Inventario"
                android:textColor="#000000"
                android:textSize="19sp"
                app:cornerRadius="10dp"
                tools:layout_editor_absoluteX="206dp"
                tools:layout_editor_absoluteY="503dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>